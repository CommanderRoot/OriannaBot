{
    "compilerOptions": {
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}